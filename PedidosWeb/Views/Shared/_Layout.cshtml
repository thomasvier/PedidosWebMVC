<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pedidos Web</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap-datepicker3.css")
    @Styles.Render("~/Content/jquery-ui.css")
    @Styles.Render("~/Content/jquery-ui.min.css")
    
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">                
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Cadastro
                            <span class="caret"></span>
                            <ul id="menu-admin" class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Clientes", "Index", "Clientes")
                                    @Html.ActionLink("Representantes", "Index", "Representantes")
                                    @Html.ActionLink("Produtos", "Index", "Produtos")
                                    @Html.ActionLink("Usuários", "Index", "Usuarios")
                                </li>
                            </ul>
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">                        
                        @Html.ActionLink("Pedidos", "RedirecionaPedidos", "Autenticacao")                           
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Relatórios
                            <span class="caret"></span>
                            <ul id="menu-admin" class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Lista de preços", "Produtos", new { controller = "Relatorios" }, htmlAttributes: new { @target = "_blank" })
                                </li>
                            </ul>
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @Context.User.Identity.Name
                            <span class="caret"></span>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Sair", "LogOff", "Autenticacao")
                                </li>
                            </ul>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>        
    <div class="container body-content">                
        @{Html.RenderPartial("_Mensagem");}
        <br />
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-ui.js")    
    @Scripts.Render("~/Scripts/jquery.mask.js")  
    @Scripts.Render("~/Scripts/jquery.maskMoney.min.js")  
    @Scripts.Render("~/Scripts/bootstrap-datepicker.min.js")
    @Scripts.Render("~/Scripts/Views/Geral.js")
    @RenderSection("scripts", required: false)
</body>
</html>
