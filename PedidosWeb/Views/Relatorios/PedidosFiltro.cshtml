@{
    ViewBag.Title = "Relatório de pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">Relatório de pedidos</div>
    <div class="panel-body">
        <div class="form-group">
                @Html.Label("Cliente")
                @Html.DropDownList("ddlClientes", new SelectList(ViewBag.Clientes, "ID", "RazaoSocial"), "Selecione", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Data inicial")
                @Html.TextBox("DataInicial", "", htmlAttributes: new { @class = "form-control datepicker", @placeholder = "dd/mm/aaaa"})
            </div>
            <div class="col-md-6">
                @Html.Label("Data final")
                @Html.TextBox("DataFinal", ViewBag.dataFinal as string, htmlAttributes: new { @class = "form-control datepicker", @placeholder = "dd/mm/aaaa" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <button type="button" id="btnGerarRelatorio" class="btn btn-primary" title="Imprimir"><i class="glyphicon glyphicon-stats"></i> Gerar relatório</button>            
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/Views/Relatorios/PedidosFiltro.js")